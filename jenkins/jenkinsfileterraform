pipeline {
    agent { label 'ubuntu_agent' }

    stages {
        stage('Terraform init') {
            steps {
                script {
                    dir('/home/jenkins/workspace/terraform/terraform') {
                        sh 'terraform init'
                    }
                }
            }
        }

        stage('Terraform apply') {
            steps {
                script {
                    dir('/home/jenkins/workspace/terraform/terraform') {
                        sh 'terraform apply --auto-approve'
                    }
                }
            }
        }
    }
}
