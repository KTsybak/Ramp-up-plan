pipeline {
    agent { label 'ubuntu_agent' }

    stages {
     
        stage('Terraform init') {
            steps {
                sh 'cd /home/jenkins/workspace/terraform/terraform'
                sh 'terraform init'
            }
        }
  
        stage('Terraform apply') {
            steps {
                sh 'terraform apply --auto-approve'
            }
        }
    }
}
